@model Cadastro.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Novo Produto";
}

<h1>Novo Produto</h1>

<h4>Dados do Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.Client)</label>
                <select asp-for="IdClient" class="form-control">
                    <option value="">-- Selecione --</option>
                    @foreach (var item in Model.ListClient)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.Category)</label>
                <select asp-for="IdCategory" class="form-control">
                    <option value="">-- Selecione --</option>
                    @foreach (var item in Model.ListCategoria)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
